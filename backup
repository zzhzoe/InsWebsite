    <script>
    // Firebaseé…ç½®
    const firebaseConfig = {
        apiKey: "AIzaSyC13M47F_4HcP5Z0KPvnPdRs7FCzfwoKus",
        authDomain: "research-project-0801.firebaseapp.com",
        projectId: "research-project-0801",
        storageBucket: "research-project-0801.appspot.com",
        messagingSenderId: "655922410105",
        appId: "1:655922410105:web:b0919370054af912261aa8",
        measurementId: "G-PX7PE1V6S3"
    };

    // åˆå§‹åŒ–Firebase
    firebase.initializeApp(firebaseConfig);
    const db = firebase.firestore();

    let userData = {};
    const totalPosts = 10;
    let postViewTimes = {};

    document.getElementById('survey-form').addEventListener('submit', async function(e) {
        e.preventDefault();
        
        userData = {
            name: document.getElementById('name').value,
            studentId: document.getElementById('studentId').value,
            gender: document.getElementById('gender').value,
            age: parseInt(document.getElementById('age').value),
            timestamp: firebase.firestore.FieldValue.serverTimestamp(),
            posts: []
        };
        
        try {
            const docRef = await db.collection('users').add(userData);
            userData.docId = docRef.id;
            alert('ç”¨æˆ·ä¿¡æ¯æäº¤æˆåŠŸï¼');
            document.getElementById('user-form').style.display = 'none';
            document.getElementById('posts').style.display = 'block';
            loadPosts();
        } catch (error) {
            console.error("æäº¤æ•°æ®æ—¶å‡ºé”™:", error);
            alert('æäº¤æ•°æ®æ—¶å‡ºé”™ã€‚è¯·é‡è¯•ã€‚');
        }
    });

    function loadPosts() {
        const postsContainer = document.getElementById('posts');
        postsContainer.innerHTML = ''; // æ¸…ç©ºç°æœ‰çš„å¸–å­

        const posts = generateRandomPosts(totalPosts);
        posts.forEach((post, index) => {
            const postElement = createPostElement(post, index);
            postsContainer.appendChild(postElement);
            postViewTimes[index] = Date.now();
        });

        // æ·»åŠ æ»šåŠ¨äº‹ä»¶ç›‘å¬å™¨æ¥è·Ÿè¸ªæŸ¥çœ‹æ—¶é—´
        window.addEventListener('scroll', updateViewTimes);
    }

    function generateRandomPosts(count) {
        const posts = [];
        for (let i = 0; i < count; i++) {
            posts.push({
                username: `user${i + 1}`,
                profilePic: `https://via.placeholder.com/32/${Math.floor(Math.random()*16777215).toString(16)}/ffffff?text=User${i + 1}`,
                postImage: `https://via.placeholder.com/414x414/${Math.floor(Math.random()*16777215).toString(16)}/ffffff?text=Post${i + 1}`,
                caption: `è¿™æ˜¯å¸–å­ ${i + 1} çš„è¯´æ˜æ–‡å­—ã€‚`,
                likes: Math.floor(Math.random() * 1000),
                isAI: Math.random() < 0.5 // 50%çš„æ¦‚ç‡æ˜¯AIå†…å®¹
            });
        }
        return shuffleArray(posts);
    }

    function shuffleArray(array) {
        for (let i = array.length - 1; i > 0; i--) {
            const j = Math.floor(Math.random() * (i + 1));
            [array[i], array[j]] = [array[j], array[i]];
        }
        return array;
    }

    function createPostElement(post, index) {
        const postElement = document.createElement('div');
        postElement.className = 'post';
        postElement.innerHTML = `
            <div class="post-header">
                <img src="${post.profilePic}" alt="${post.username}">
                <div>
                    <div class="post-username">${post.username}</div>
                    ${post.isAI ? '<div class="post-ai-label">è¿™æ˜¯AIç”Ÿæˆçš„å†…å®¹</div>' : ''}
                </div>
            </div>
            <img class="post-image" src="${post.postImage}" alt="Post image">
            <div class="post-actions">
                <button onclick="likePost(${index})">â¤ï¸</button>
                <button>ğŸ’¬</button>
                <button>âœˆï¸</button>
            </div>
            <div class="post-likes">${post.likes} èµ</div>
            <div class="post-caption"><strong>${post.username}</strong> ${post.caption}</div>
        `;
        return postElement;
    }

    async function likePost(postId) {
        const likeButton = document.querySelector(`.post:nth-child(${postId + 1}) .post-actions button:first-child`);
        const likesElement = document.querySelector(`.post:nth-child(${postId + 1}) .post-likes`);
        let likes = parseInt(likesElement.textContent);
        
        if (likeButton.textContent === 'â¤ï¸') {
            likeButton.textContent = 'ğŸ’—';
            likes++;
        } else {
            likeButton.textContent = 'â¤ï¸';
            likes--;
        }
        
        likesElement.textContent = `${likes} èµ`;

        const viewTime = (Date.now() - postViewTimes[postId]) / 1000;
        updatePostData(postId, likes, viewTime);
        postViewTimes[postId] = Date.now(); // é‡ç½®æŸ¥çœ‹æ—¶é—´
    }

    function updateViewTimes() {
        const posts = document.querySelectorAll('.post');
        posts.forEach((post, index) => {
            const rect = post.getBoundingClientRect();
            if (rect.top < window.innerHeight && rect.bottom >= 0) {
                // å¸–å­åœ¨è§†å›¾ä¸­
                if (!postViewTimes[index]) {
                    postViewTimes[index] = Date.now();
                }
            } else {
                // å¸–å­ä¸åœ¨è§†å›¾ä¸­
                if (postViewTimes[index]) {
                    const viewTime = (Date.now() - postViewTimes[index]) / 1000;
                    updatePostData(index, parseInt(post.querySelector('.post-likes').textContent), viewTime);
                    postViewTimes[index] = null;
                }
            }
        });
    }

    async function updatePostData(postId, likes, viewTime) {
        try {
            await db.collection('users').doc(userData.docId).update({
                posts: firebase.firestore.FieldValue.arrayUnion({
                    id: postId,
                    likes: likes,
                    viewTime: viewTime
                })
            });
        } catch (error) {
            console.error("æ›´æ–°å¸–å­æ•°æ®æ—¶å‡ºé”™:", error);
        }
    }

    // å½“ç”¨æˆ·æ»šåŠ¨åˆ°åº•éƒ¨æ—¶è°ƒç”¨æ­¤å‡½æ•°
    async function finishSurvey() {
        updateViewTimes(); // ç¡®ä¿æ‰€æœ‰æŸ¥çœ‹æ—¶é—´éƒ½è¢«æ›´æ–°
        try {
            await db.collection('users').doc(userData.docId).update({
                surveyCompleted: true
            });
            alert('æ„Ÿè°¢æ‚¨å®Œæˆè°ƒæŸ¥ï¼');
        } catch (error) {
            console.error("æ ‡è®°è°ƒæŸ¥å®Œæˆæ—¶å‡ºé”™:", error);
        }
    }

    // æ·»åŠ æ»šåŠ¨äº‹ä»¶ç›‘å¬å™¨æ¥æ£€æµ‹ç”¨æˆ·æ˜¯å¦æ»šåŠ¨åˆ°åº•éƒ¨
    window.addEventListener('scroll', () => {
        if ((window.innerHeight + window.scrollY) >= document.body.offsetHeight - 100) {
            finishSurvey();
        }
    });
    </script>
